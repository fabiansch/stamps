<p id="notice"><%= notice %></p>

<h1>Stamps</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Card</th>
      <th>User</th>
      <th>Stamping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stamps.each do |stamp| %>
      <tr>
        <td><%= stamp.card.company.name %></td>
        <td><%= stamp.card.name %></td>
        <td><%= stamp.user.email %></td>
        <td><%= stamp.stamping %></td>
        <td><%= link_to 'Show', stamp %></td>
        <td><%= link_to 'Edit', edit_stamp_path(stamp) %></td>
        <td><%= link_to 'Destroy', stamp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

