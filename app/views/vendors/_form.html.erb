<%= form_with(model: vendor, local: true) do |form| %>
  <% if vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_id %>
    <%= form.select :company_id do %>
      <% @companies.each do |c| %>
        <%= content_tag :option, c.name, value: c.id %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id do %>
      <% @users.each do |u| %>
        <%= content_tag :option, u.email, value: u.id %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
