<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Card</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stampings.each do |s| %>
      <tr>
        <td><%= s.count %></td>
        <td><%= s.card.company.name + ' | | ' + s.card.name %></td>
        <td><%= s.user.email %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_stamping_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

